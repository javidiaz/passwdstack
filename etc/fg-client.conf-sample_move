#******************************************************************************
# FutureGrid Client Configuration File
#******************************************************************************


#******************************************************************************
# Password Stack Client Configuration
#------------------------------------------------------------------------------
#  port: Port where our PasswdStackServer is listening
#
#  serveraddr: Address of the server machine
#
#  log: file where rain move client logs are stored
#  
#  log_level: debug level. It can be debug, error, info, warning
#
#  ca_cert: authority that sign the certificate
#
#  certfile: x509 certificate used by the service
#
#  keyfile: key of the certificate
#******************************************************************************
[PasswdStack]
port = 56795
serveraddr=localhost
log=~/passwdstack.log
log_level=debug
ca_cert=/etc/futuregrid/imdclient/cacert.pem
certfile=/etc/futuregrid/imdclient/imdccert.pem
keyfile=/etc/futuregrid/imdclient/privkey.pem

